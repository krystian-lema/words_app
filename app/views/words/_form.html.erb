<%= form_for @word do |f| %>
	<p>
		<%= f.label :definition %><br>
		<%= f.text_field(:definition, {:class => 'form-control'}) %>
	</p>

	<p>
		<%= f.label :translation %><br>
		<%= f.text_area(:translation, {:class => 'form-control'}) %>
	</p>

	<p>
		<%= f.submit({:class => 'btn btn-primary'}) %>
	</p>
<% end %>